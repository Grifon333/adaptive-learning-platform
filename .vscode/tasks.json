{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_runner --delete-conflicting-outputs",
            "type": "shell",
            "command": "dart",
            "args": [
                "run",
                "build_runner",
                "build",
                "--delete-conflicting-outputs"
            ],
            "options": {
                "cwd": "${workspaceFolder}/adaptive_learning_app"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$dart-build_runner"
            ]
        },
        {
            "label": "flutter gen-l10n",
            "type": "shell",
            "command": "flutter",
            "args": [
                "gen-l10n"
            ],
            "options": {
                "cwd": "${workspaceFolder}/adaptive_learning_app"
            },
            "group": "build",
            "problemMatcher": [],
        }
    ]
}
